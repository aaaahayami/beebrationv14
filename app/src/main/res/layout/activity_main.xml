<?xml version="1.0" encoding ="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="600dp"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundyellow"
    tools:context="com.example.beebration_v2.MainActivity">


    <androidx.core.widget.NestedScrollView
        android:layout_width="490dp"
        android:layout_height="932dp"
        android:layout_weight="1"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="14dp"
                android:orientation="horizontal" />


            <LinearLayout
                android:layout_width="455dp"
                android:layout_height="1018dp"
                android:layout_marginTop="0dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout"
                app:layout_constraintStart_toStartOf="@+id/linearLayout"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">


                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="241dp">


                    <LinearLayout
                        android:layout_width="136dp"
                        android:layout_height="264dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"

                        android:orientation="vertical"

                        app:cardCornerRadius="100dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/about_text_view"
                            android:layout_width="100dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="0dp"
                            android:text="ABOUT US "
                            android:textColor="#f9a603"
                            android:textSize="20sp"
                            tools:ignore="TextContrastCheck,TextContrastCheck" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/about2_text_view"
                            android:layout_width="125dp"
                            android:layout_height="255dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Beebration displays the voltage, battery percentage, and status of the device's light bulbs. The beebration device is used to harvest the energy from the vibration sound of the bees incorporated inside the beehive. "
                            android:textColor="#FFFFFF"
                            android:textSize="13.5sp"
                            tools:ignore="TextContrastCheck,TextContrastCheck" />


                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="158dp"
                        android:layout_height="177dp"
                        android:layout_margin="20dp"

                        app:cardBackgroundColor="#E8E4C9"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="50dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="170dp"

                            android:background="@drawable/gradientcard"
                            android:orientation="horizontal"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="20dp"
                            app:cardBackgroundColor="#000000"
                            app:cardCornerRadius="10dp" />


                        <LinearLayout
                            android:layout_width="191dp"
                            android:layout_height="143dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/temp"
                                android:layout_width="135dp"
                                android:layout_height="30dp"
                                android:layout_marginVertical="10dp"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="30dp"
                                android:layout_marginRight="0dp"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-thin"
                                android:text=" 10°C"
                                android:textColor="#484801"
                                android:textSize="34dp" />

                            <TextView
                                android:id="@+id/address"
                                android:layout_width="189dp"
                                android:layout_height="8dp"
                                android:layout_marginVertical="1dp"
                                android:layout_marginStart="6dp"
                                android:layout_marginBottom="30dp"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-thin"
                                android:text="@string/bacnotan_la_union"
                                android:textColor="#484801"
                                android:textSize="15dp"
                                android:textStyle="bold" />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="326dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"

                    android:backgroundTint="@color/bgcolor"
                    app:cardBackgroundColor="#E8E4C9"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="50dp"/>


                <androidx.cardview.widget.CardView
                    android:layout_width="324dp"
                    android:layout_height="126dp"
                    android:layout_margin="20dp"

                    android:backgroundTint="@color/bgcolor"
                    app:cardBackgroundColor="#E8E4C9"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="50dp">

                    <LinearLayout
                        android:layout_width="324dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="0dp"
                        android:background="@drawable/gradientcard"
                        android:orientation="horizontal"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="20dp"
                        app:cardBackgroundColor="#000000"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:layout_width="173dp"
                            android:layout_height="86dp"
                            android:layout_weight="1"
                            android:scaleType="center"
                            android:src="@drawable/battery_logo" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView_batteryPercentage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-thin"
                                android:text="\nNo data"
                                android:textColor="#484801"
                                android:textSize="24dp"
                                android:textStyle="bold" />


                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="322dp"
                    android:layout_height="121dp"
                    android:layout_margin="20dp"

                    android:backgroundTint="@color/bgcolor"
                    app:cardBackgroundColor="#E8E4C9"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="50dp">

                    <LinearLayout
                        android:layout_width="324dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="0dp"
                        android:background="@drawable/gradientcard"
                        android:orientation="horizontal"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="20dp"
                        app:cardBackgroundColor="#000000"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:layout_width="165dp"
                            android:layout_height="94dp"
                            android:layout_weight="1"
                            android:scaleType="center"
                            android:src="@drawable/bulb" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="2dp"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-thin"
                                android:text="Light Bulb Status"
                                android:textColor="#484801"
                                android:textSize="24dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView_lightBulbStatus"
                                android:layout_width="234dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-thin"
                                android:text="\nNo data"
                                android:textColor="#484801"
                                android:textSize="22dp"
                                android:textStyle="bold" />


                        </LinearLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <ProgressBar android:id="@+id/loader" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_centerInParent="true"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />

    <TextView android:id="@+id/errorText" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_centerInParent="true"
        android:visibility="gone" android:text="Something went wrong"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>

